<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Register">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
   >


    <ImageView
        android:layout_width="209dp"
        android:layout_height="255dp"
        android:src="@drawable/ic_regis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="25dp"
        android:text="@string/register"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="50sp"

        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/create_new_account"
        android:textColor="#8F8C8C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/full_name"
        android:background="@drawable/border"
        android:id="@+id/FullName"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TextView3"
        android:layout_marginTop="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:drawableStart="@drawable/ic_shapename"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_shapeemail"
        android:drawablePadding="15dp"
        android:hint="@string/email_address"
        android:id="@+id/Email"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/FullName"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_shapepassword"
        android:drawablePadding="15dp"
        android:hint="@string/create_password"
        android:inputType="textPassword"
        android:id="@+id/Password"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_shapecity"
        android:drawablePadding="15dp"
        android:hint="@string/city"
        android:id="@+id/city"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_shapephone"
        android:drawablePadding="15dp"
        android:hint="@string/mobile_number"
        android:id="@+id/Phone"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/city"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:hint="@string/enter_your_blood_group"
        android:id="@+id/BG"
        android:drawableStart="@drawable/ic_blood_drop"
        android:padding="15dp"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/Phone"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/REGISTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="608dp"
        android:background="@drawable/bg_text_button"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="@string/registerBtn"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/already_have_account"
        android:textColor="#8F8C8C"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/REGISTER" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>