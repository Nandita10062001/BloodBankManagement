<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0fff0"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="8dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:text="My Profile"
        android:textColor="#000000"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/account" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_shapename"
            android:drawablePadding="10dp"
            android:text="Name : "
            android:textColor="#000000"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/in_fullName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:hint="Name"
            android:textColor="#000" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Email : "
            android:textColor="#000000"
            android:layout_marginStart="25dp"
            app:drawableLeftCompat="@drawable/ic_shapeemail" />

        <EditText
            android:id="@+id/in_Email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:hint="Email Address"
            android:textColor="#000" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:drawablePadding="10dp"
            android:text="Blood Group:"
            android:textColor="#000000"
            app:drawableLeftCompat="@drawable/ic_baseline_local_hospital_24" />

        <EditText
            android:id="@+id/in_BloodGroup"
            android:layout_width="190dp"
            android:layout_height="40dp"
           android:layout_margin="15dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No:"
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:layout_marginStart="25dp"
            app:drawableLeftCompat="@drawable/ic_shapephone" />
        <EditText
            android:layout_marginStart="20dp"
            android:id="@+id/in_Mobile"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="Mobile No."
            android:inputType="text"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City:"
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:layout_marginStart="25dp"
            app:drawableLeftCompat="@drawable/ic_baseline_home_24" />

        <EditText
            android:id="@+id/in_City"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="30dp"
            android:hint="City"
            android:textColor="#000000" />
    </LinearLayout>
    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp"
        android:text="Save "
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />
</LinearLayout>

